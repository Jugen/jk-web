<?xml version="1.0" encoding="UTF-8"?>
<facelet-taglib version="2.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facelettaglibrary_2_0.xsd">
	<namespace>http://www.jk.com/jsf</namespace>
	<!-- Simple tag that shows hello from JK -->
	<tag>
		<tag-name>hello</tag-name>
		<component>
			<component-type>jk.hello</component-type>
			<handler-class />
		</component>
	</tag>
	<!-- Show the componentRenderers and Component types for every tag in the current view -->
	<tag>
		<tag-name>componentsInfo</tag-name>
		<component>
			<component-type>jk.components.info</component-type>
			<handler-class />
		</component>
	</tag>
	<!-- gridLayout that will insure all cells and all components have the same size width and height -->
	<tag>
		<tag-name>gridLayout</tag-name>
		<component>
			<component-type>jk.layout.grid</component-type>
			<handler-class />
		</component>
	</tag>
	<!-- Useful tag that will show the current version of main JSF implementation classes -->
	<tag>
		<tag-name>jsfInfo</tag-name>
		<component>
			<component-type>com.jk.jsf.info</component-type>
			<handler-class />
		</component>
	</tag>
	<!-- Form layout that will insure add the lables automatically , and will distribute the columns based on the cols attribute -->
	<tag>
		<tag-name>formLayout</tag-name>
		<component>
			<component-type>jk.layout.formLayout</component-type>
			<handler-class>com.jk.jsf.components.Tag_UIFormLayout</handler-class>
		</component>
	</tag>
	<!-- Nested tag that will be used inside FormLayout which will includes the form fields -->
	<tag>
		<tag-name>fields</tag-name>
		<component>
			<component-type>jk.layout.fields</component-type>
			<handler-class />
		</component>
	</tag>
	<!-- Nested tag that will be used inside FormLayout which will include the form actions -->
	<tag>
		<tag-name>actions</tag-name>
		<component>
			<component-type>jk.layout.actions</component-type>
			<handler-class />
		</component>
	</tag>
	<!-- BorderLayout implementation -->
	<tag>
		<tag-name>borderLayout</tag-name>
		<component>
			<component-type>jk.layout.border</component-type>
			<handler-class />
		</component>
	</tag>
	<!-- North region of the Border layout -->
	<tag>
		<tag-name>north</tag-name>
		<component>
			<component-type>jk.layout.north</component-type>
			<handler-class />
		</component>
	</tag>
	<!-- Horizantal start region of the Border layout -->
	<tag>
		<tag-name>start</tag-name>
		<component>
			<component-type>jk.layout.start</component-type>
			<handler-class />
		</component>
	</tag>
	<!-- Center region of the BorderLayout -->
	<tag>
		<tag-name>center</tag-name>
		<component>
			<component-type>jk.layout.center</component-type>
			<handler-class />
		</component>
	</tag>
	<!-- Horizental end region of BorederLayout -->
	<tag>
		<tag-name>end</tag-name>
		<component>
			<component-type>jk.layout.end</component-type>
			<handler-class />
		</component>
	</tag>
	<!-- South region of the BorderLayout tag -->
	<tag>
		<tag-name>south</tag-name>
		<component>
			<component-type>jk.layout.south</component-type>
			<handler-class />
		</component>
	</tag>
</facelet-taglib>
