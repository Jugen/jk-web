<facelet-taglib id="jk"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facelettaglibrary_2_2.xsd"
	version="2.2">
	<namespace>http://jalalkiswani.com/jsf</namespace>
	<!-- Simple tag that shows hello from JK -->
	<tag>
		<tag-name>hello</tag-name>
		<component>
			<component-type>jk.hello</component-type>
		</component>
	</tag>
	<!-- Show the componentRenderers and Component types for every tag in the current view -->
	<tag>
		<tag-name>componentsInfo</tag-name>
		<component>
			<component-type>jk.components.info</component-type>
		</component>
	</tag>
	<!-- gridLayout that will insure all cells and all components have the same size width and height -->
	<tag>
		<tag-name>gridLayout</tag-name>
		<component>
			<component-type>jk.layout.grid</component-type>
		</component>
	</tag>
	<!-- Useful tag that will show the current version of main JSF implementation classes -->
	<tag>
		<tag-name>jsfInfo</tag-name>
		<component>
			<component-type>com.jk.jsf.info</component-type>
		</component>
	</tag>
	
	<tag>
		<tag-name>include</tag-name>
		<handler-class>com.jk.faces.tags.JKTagIncludeHandler</handler-class>
	</tag>
